# KMRL Fleet Management System - Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost

# Firebase Configuration
FIREBASE_PROJECT_ID=k-m-r-lchronos-hn2nri
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json
FIREBASE_DATABASE_URL=https://k-m-r-lchronos-hn2nri-default-rtdb.firebaseio.com

# Google Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=24h

# Optimization Engine Configuration
PYTHON_PATH=python
OPTIMIZATION_SCRIPT_PATH=../Optimization_Engine/optimization_engine_v3.py

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Redis Configuration (optional - for caching)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3001

# Database Configuration
DB_CONNECTION_TIMEOUT=30000
DB_RETRY_ATTEMPTS=3

# WebSocket Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:3001

# API Configuration
API_VERSION=v1
API_BASE_PATH=/api/v1

# Optimization Configuration
OPTIMIZATION_CACHE_TTL=3600
MAX_OPTIMIZATION_HISTORY=50

# Notification Configuration
NOTIFICATION_ENABLED=true
NOTIFICATION_CHANNELS=email,websocket

# Development Configuration
DEBUG_MODE=true
VERBOSE_LOGGING=true
